generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @unique @default(uuid())
  name   String
  email  String  @unique
  avatar String?
  role   Role    @default(BASIC)
  albums Album[] @relation("userAlbums")
  photos Photo[] @relation("userPhotos")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Album {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  isPrivate   Boolean? @default(false)

  author   User   @relation("userAlbums", fields: [authorId], references: [id])
  authorId String

  photos Photo[] @relation("albumPhotos")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id          String  @id @unique @default(uuid())
  name        String  @default("Photo")
  description String?
  file        String

  author   User   @relation("userPhotos", fields: [authorId], references: [id])
  authorId String

  album   Album  @relation("albumPhotos", fields: [albumId], references: [id])
  albumId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  BASIC
}
